@model IEnumerable<Lab4MVC.Models.LinkTable>

<html>
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE-edge" />
    <meta name="viewport" content="width = device-width , initial-scale=1" />
    <title> Customer Library lab4</title>
</head>
<body>
    <div style="font-family:Arial">
        <h2>List</h2>

        <table border="1">
            <thead>
                <tr>
                    <th>@Html.DisplayNameFor(model => model.StartDate)</th>
                    <th>@Html.DisplayNameFor(model => model.EndDate)</th>
                    <th>@Html.DisplayNameFor(model => model.Returned)</th>
                    <th>@Html.DisplayNameFor(model => model.CustomerId)</th>
                    <th>@Html.DisplayNameFor(model => model.BookId)</th>
                </tr>
            </thead>
            <tbody>
                @if (Model == null)
                {
                    <h2>Nothing here</h2>
                }
                else
                {
                    @foreach (var i in Model)
                    {
                        <tr>
                            <td>@Html.DisplayFor(modelitem => i.StartDate)</td>
                            <td>@Html.DisplayFor(modelitem => i.EndDate)</td>
                            <td>@Html.DisplayFor(modelitem => i.Returned)</td>
                            <td>@Html.DisplayFor(modelitem => i.CustomerId)</td>
                            <td>@Html.DisplayFor(modelitem => i.BookId)</td>
                        </tr>
                    }
                }

            </tbody>
        </table>
    </div>
    <div>
        <a asp-action="AllCustomers" asp-controller="Customer">Back to The Customer List</a>
    </div>
</body>
</html>